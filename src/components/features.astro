---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Bring Your Own Data",
    description:
      "Harness your organization's existing data to create precisely tailored chatbots.",
    icon: "mdi:building",
  },
  {
    title: "100% Collaborative",
    description:
      "Ensure your chatbots meet every requirement with team-wide collaboration.",
    icon: "mdi:handshake",
  },
  {
    title: "Private & Secure",
    description:
      "Your data safety is paramount. Deploy securely on-premises as needed.",
    icon: "mdi:security",
  },
  {
    title: "Free Forever",
    description:
      "Build publicly without ever paying a dime. If it's free for everyone, it's free for you.",
    icon: "mdi:heart",
  },
  {
    title: "Lightning-Fast",
    description:
      "Rapid development cycles mean you can ideate, iterate and deploy swiftly.",
    icon: "mdi:globe",
  },
  {
    title: "Maxed-out Performance",
    description:
      "Overcome typical LLM limitations with solutions that truly understand and respond to user needs.",
    icon: "mdi:arm-flex",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    <span class="text-primary">Chat.dev</span> lets anyone in your org
    train
    <span class="text-primary">high-performing</span>
    LLM models with <span class="text-primary">custom datasets</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
